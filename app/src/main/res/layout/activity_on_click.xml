<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.mahendran.moviecritic.onClickActivity">


        <TextView  android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/original"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:background="@color/custom"
            android:layout_alignBottom="@+id/date" />

    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout">
        <ImageView
            android:paddingTop="@dimen/image_padding_up"
            android:paddingLeft="@dimen/image_padding_left"
            android:layout_width="@dimen/image_layout_width"
            android:layout_height="@dimen/image_layout_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/clickImage"

            android:layout_weight="50" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50">
            <TextView  android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:text="test"
                android:textSize="32sp"
                android:id="@+id/date"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                />
            <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:text="test"
                android:id="@+id/vote"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout2">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/movie_details_layout_scrollView">
        <TextView
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:id="@+id/description"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="The path of the righteous man is beset on all sides by the inequities of the selfish and the tyranny of evil men"
            />
        </ScrollView>
    </LinearLayout>


</LinearLayout>
